@model CreateEditViewModel


@inject IDepartmentService departmenService


@{
	var Departments = new SelectList(await departmenService.GetAllAsIQueryableAsync(string.Empty), "Id", "Name");
}


<form asp-action="@ViewBag.Action" class="row col-7" enctype="multipart/form-data">

	<div asp-validation-summary="ModelOnly"></div>


	<div class="form-group col-6">
		<label class="form-label" asp-for="Name"></label>
		<input asp-for="Name" class="form-control mb-3" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="Email"></label>
		<input asp-for="Email" class="form-control mb-3" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="Address"></label>
		<input asp-for="Address" class="form-control mb-3" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="Age"></label>
		<input asp-for="Age" class="form-control mb-3" />
		<span asp-validation-for="Age" class="text-danger"></span>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="Salary"></label>
		<input asp-for="Salary" class="form-control mb-3" />
		<span asp-validation-for="Salary" class="text-danger"></span>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="DepartmentId"></label>
		<select asp-for="DepartmentId" asp-items="@Departments" class="form-control">
				<option value="@null">Select Employee Type</option>
		</select>
	</div>

	<div class="form-group col-6">
		<label class="form-label" asp-for="PhoneNumber"></label>
		<input asp-for="PhoneNumber" class="form-control mb-3" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>

	<div class="form-group my-3 col-6">
		<label asp-for="EmployeeType" class="control-label"></label>
		<select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmpType>()" class="form-control">
		<option value="">Select Employee Type</option>
		</select>
	</div>

	<div class="form-group my-3 col-6">
		<label class="control-label" asp-for="Gender" ></label><br />
		@foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
		{
					<label class="radio-inline" style="display:block">
					<input type="radio" asp-for="Gender" value="@genderOption" />
				@genderOption
					</label>
		}
	</div>


	<div class="form-check col-6">
		<input asp-for="IsActive" class="form-check-input mb-3" />
		<label class="form-check-label" asp-for="IsActive"></label>
	</div>

	<div class="form-group col-12 mt-3">
		<label class="form-label" asp-for="HiringDate"></label>
		<input asp-for="HiringDate" type="date" class="form-control mb-3" />
		<span asp-validation-for="HiringDate" class="text-danger"></span>
	</div>

	<div class="form-group col-12 mt-3">
		<label class="form-label" asp-for="Image"></label>
		<input asp-for="Image" class="form-control mb-3" />
	</div>


	<div class="mt-3">
		<input type="submit" value="@ViewBag.Title" class="btn btn-primary"/>
		<a asp-action="Index" class="btn btn-light">Back To List</a>
	</div>
</form>