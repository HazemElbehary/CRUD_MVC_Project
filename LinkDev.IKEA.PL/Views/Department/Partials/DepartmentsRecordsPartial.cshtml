@model IEnumerable<DepartmentDTO>

@foreach (var department in Model)
{
	<tr>
		<td class="align-middle" >@department.Code</td>
		<td class="align-middle" >@department.Name</td>
		<td class="align-middle" >@department.CreationDate</td>
		<partial name="Partials/_ButtonsPartial" model="@department.Id" />
	</tr>
	<!-- Modal -->
	<div class="modal fade" id="deleteModal-@department.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel">Delete Department</h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		  </div>
		  <div class="modal-body">
				Are You Sure To Delete Department?
		  </div>
		  <div class="modal-footer">
			<form asp-action="Delete" asp-route-id="@department.Id">
			  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
			  <button type="submit" class="btn btn-primary">Delete</button>
			</form>
		  </div>
		</div>
	  </div>
	</div>
}