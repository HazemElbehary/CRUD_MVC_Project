@model IEnumerable<EmployeeDTO>


@foreach (var Employee in Model)
{
	<tr>
		<td class="align-middle" >@Employee.Name</td>
		<td class="align-middle">
			<a href="mailto:@Employee.Email">@Employee.Email</a>
		</td>
		<td class="align-middle" >@Employee.Department</td>
		<td class="align-middle" >@Employee.EmployeeType</td>
		<td class="align-middle" >@Employee.Age</td>
		<td class="align-middle" >@Employee.Salary.ToString("C")</td>
		<td class="align-middle" >@Employee.IsActive</td>
		<td class="align-middle" >@Employee.Gender</td>
		<partial name="Partials/_ButtonsPartial" model="@Employee.Id"/>
	</tr>
	
	<!-- Modal -->
	<div class="modal fade" id="deleteModal-@Employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel">Delete Employee</h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		  </div>
		  <div class="modal-body">
					Are You Sure To Delete Employee?
		  </div>
		  <div class="modal-footer">
			<form asp-action="Delete" asp-route-id="@Employee.Id">
			  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
			  <button type="submit" class="btn btn-primary">Delete</button>
			</form>
		  </div>
		</div>
	  </div>
	</div>
}