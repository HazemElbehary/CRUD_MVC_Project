@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}

<div class="agileits-top">
	<div asp-validation-summary="ModelOnly"></div>
	<form asp-action="SignIn">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<div class="wthree-text">
			<label class="anim">
				<input asp-for="RememberMe" class="checkbox mt-2">
				<span>Remember Me</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNIN">
	</form>
	<p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
	<p>Forget Password? <a asp-action="ForgetPassword"> Reset Password</a></p>
</div>

