@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}

<div class="agileits-top">
	<div asp-validation-summary="ModelOnly"></div>
	<form asp-action="ResetPassword">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<input class="text mt-2" asp-for="ConfirmedPassword" placeholder="Confirme Password" required="">
		<input type="submit" value="Save">
	</form>
	@* <p>Don't have an Account? <a href="SignUp"> Sign Up Now!</a></p> *@
</div>

